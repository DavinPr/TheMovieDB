<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.splashscreen_background" parent="AppTheme">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.white_background" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme.main_background" parent="AppTheme">
        <item name="android:background">@color/mainBackground</item>
    </style>

    <style name="AppTheme.light_status_bar" parent="AppTheme">
        <item name="android:statusBarColor">@color/mainBackground</item>
    </style>

    <style name="text_appname_style">
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:fontFamily">@font/poppins_semibolditalic</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_category_style">
        <item name="android:textColor">@color/textGreyColor</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_cast_character">
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_rating_value_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_inside_poster_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_detail_value_style">
        <item name="android:textColor">@color/textGreyColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_detail_title_style">
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>